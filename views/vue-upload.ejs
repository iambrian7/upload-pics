var app = new Vue({
el: '#app',
router,
components: {
          'my-component': httpVueLoader('./components/my-component.vue'),
          'vue-nav': httpVueLoader('./components/vueNav.vue'),
        },
data: {
  title: "Website Five",
  description: "A study of using just the vue-loader",
  focus: "",
  today: new Date(),
  images: myimages,
  uploadOpen: false,
  previewSrc: '',
  previewLength: '',
  isOpen: false,
  overlayImage: ''
},
methods: {
  openOverlay: function(src){
    this.overlayImage = src;
     this.isOpen = true;
  },
 newFile: function(e){
